{
    "Xmas_config":{
        "@target@":"./Test/MergeCode/Sample_complex",
        "@source@":"./Template/MergeCode"
    },
    "Xmas_clean":{"@target@":"backup"},
    "Xmas_task":[
        {
            "Xmas_target":"@target@/copyTarget/",
            "Xmas_source":{
                "Xmas_path":"@source@/copyDir/aa.txt",
                "Xmas_contain":".txt",
                "Xmas_except":"bb,cc",
                "sample":"sample_replace"
            }
        },
        {
            "Xmas_target":"@target@/target/<page>.html",
            "Xmas_source":[
                {
                    "Xmas_path":"@source@/source/<page>.html",
                    "<!--@@{module}:{alias}@@-->":{
                        "Xmas_path":"@source@/source/module/{module}/{module}.html",
                        "Xmas_filter":"<!--###{module}###-->",
                        "{module}":"{alias}"
                    },
                    "<!--@@{module}@@-->":{
                        "Xmas_path":"@source@/source/module/{module}/{module}.html",
                        "Xmas_filter":"<!--###{module}###-->"
                    }
                }
            ]
        },
        {
            "Xmas_target":"@target@/target/<page>.css",
            "Xmas_source":[
                {
                    "Xmas_path":"@source@/source/<page>.css"
                },
                {
                    "Xmas_path":"@source@/source/<page>.html",
                    "Xmas_select":"<!--@@(.+?)@@-->",
                    "<!--@@{module}:{alias}@@-->":{
                        "Xmas_path":"@source@/source/module/{module}/{module}.css",
                        "{module}":"{alias}"
                    },
                    "<!--@@{module}@@-->":{
                        "Xmas_path":"@source@/source/module/{module}/{module}.css"
                    }
                }
            ]
        }
    ]
}